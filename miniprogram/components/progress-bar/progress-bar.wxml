<view class="container">
  <text class="time">{{showTime.currentTime}}</text>
  <view class="control">
    <!-- 可移动区域 -->
    <movable-area class="movable-area">
      <movable-view class="movable-view" direction="horizontal" damping="1000" x="{{movableDis}}" bindchange="onChange" bindtouchend="onTouchEnd"/>
    </movable-area>
    <!-- 进度条 -->
    <progress class="" stroke-width="4" background-color="#969696" active-color="#fff" percent="{{progress}}"></progress>
  </view>
  <text class="time">{{showTime.totalTime}}</text>
</view>