.detail-container{
  height:320rpx;
  width:100%;
  background-color:rgba(0,0,0,.5) ;
  /* opacity: 0.8; */
}
.detail-mask{
  position:absolute;
  width:100%;
  height:320rpx;
  top:0;
  left:0;
  filter: blur(10rpx);
  z-index:10;
}
.detail-img{
  width:280rpx;
  height:280rpx;
  margin-right:24rpx;
  border-radius:6rpx;
}
.detail-info{
  display: felx;
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:320rpx;
  padding:20rpx;
  box-sizing: border-box;
  z-index:100
}
.detail .detail-nm{
  color:#eee;
  font-size:36rpx;
  font-weight: 400;
  position:absolute;
  right:10rpx;
  bottom:100rpx;
  width:400rpx;
} 
