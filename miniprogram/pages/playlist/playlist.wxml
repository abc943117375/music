<swiper interval="3000" indicator-dots="{{true}}" indicator-color="rgba(0, 0, 0, .3)" autoplay="{{true}}" duration="500">
  <block wx:for="{{swiperImgUrl}}" wx:key="index">
    <swiper-item>
      <image class="img" src="{{item.url}}" mode="widthFix" lazy-load></image>
    </swiper-item>
  </block>
</swiper>
<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="_id">
    <x-playlist playlist="{{item}}"></x-playlist>
  </block>
</view>